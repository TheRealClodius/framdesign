{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "tools/_build/**/*",
    "tools/end-voice-session/**/*",
    "tools/ignore-user/**/*",
    "tools/kb-get/**/*",
    "tools/kb-search/**/*",
    "tools/start-voice-session/**/*",
    "tools/*.json",
    "voice-server/**/*",
    "scripts/**/*",
    "vector-search-api/**/*"
  ]
}
